@page "/AdventOfCode/Y2023/Day21"
@using Algorithms.AdventOfCode
@using Algorithms.AdventOfCode.Y2023.Day21
@inject HttpClient Http

<StepController TInput="Input" TSolutions="Solutions" TState="State" Input="@input"/>

@code 
{
    private Input? input;
    protected override async Task OnInitializedAsync()
    {
        // await Task.Delay(5000);
        var s = await Http.GetStringAsync($"sample-data/AdventOfCode/Y2023/Day21/{PuzzleHelper.GetPuzzleTitle(typeof(Solutions)).Replace(" ", "")}_full.txt");
        input = Parser.Parse(s.Replace("\r", ""));
    }
}